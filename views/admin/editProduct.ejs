    <script>
         
function confirmBlock(productId, index) {
    Swal.fire({
        title: 'Are you sure?',
        text: "You won't be able to revert this!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!'
    }).then((result) => {
        if (result.isConfirmed) {
            fetch(`/admin/delete-image?id=${productId}&&index=${index}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        title: 'Deleted!',
                        text: 'The image has been deleted.',
                        icon: 'success',
                        confirmButtonText: 'OK'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            // Reload the page to reflect changes
                            window.location.reload();
                        }
                    });
                } else {
                    Swal.fire(
                        'Error!',
                        'There was a problem deleting the image.',
                        'error'
                    );
                }
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire(
                    'Error!',
                    'There was a problem deleting the image.',
                    'error'
                );
            });
        }
    });
}


    </script>
    <script>
        let cropper;
    
        function handleFileChange(event, index) {
            const input = event.target;
            const imagePreviewContainer = document.getElementById(`imagePreviewContainer${index}`);
            const cropContainer = document.getElementById(`cropContainer${index}`);
            const cropImage = document.getElementById(`cropImage${index}`);
    
            if (input.files && input.files[0]) {
                const reader = new FileReader();
    
                reader.onload = function(e) {
                    imagePreviewContainer.innerHTML = "";
                    cropImage.src = e.target.result;
                    cropContainer.style.display = "block";
    
                    if (cropper) {
                        cropper.destroy();
                    }
    
                    cropper = new Cropper(cropImage, {
                        aspectRatio: 736/1011,
                        viewMode: 1,
                        minContainerWidth: 300,
                        minContainerHeight: 300
                    });
                };
    
                reader.readAsDataURL(input.files[0]);
            } else {
                imagePreviewContainer.innerHTML = "";
                cropContainer.style.display = "none";
            }
        }
    
        function cropImage(index) {
            const canvas = cropper.getCroppedCanvas({
                width: 736,
                height: 1011
            });
    
            canvas.toBlob(function(blob) {
                const croppedImage = new File([blob], `cropped_image_${index}.jpg`, { type: "image/jpeg" });
                const dataTransfer = new DataTransfer();
                dataTransfer.items.add(croppedImage);
                const fileInput = document.getElementById(`imageInput${index}`);
                fileInput.files = dataTransfer.files;
    
                const imagePreviewContainer = document.getElementById(`imagePreviewContainer${index}`);
                imagePreviewContainer.innerHTML = `<img src="${URL.createObjectURL(blob)}" class="img-m img-thumbnail">`;
    
                const cropContainer = document.getElementById(`cropContainer${index}`);
                cropContainer.style.display = "none";
    
                cropper.destroy();
            });
        }
    </script>
    

