                            <th>Total Amount</th>
                            <!-- <th>Action</th> -->
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (orderData && orderData.length > 0) { %>
                            <% orderData.forEach(order => { %>
                                <% order.products.sort((a, b) => new Date(b.date) - new Date(a.date)).forEach(product => { %>
                                    <tr>
                                      <td>#<%=order.orderId%></td>
                                        <td><b><%= order.userId.username %></b></td>
                                        <td><%= product.date.toLocaleDateString('en-US', {
                                            weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %>
                                        </td>
                                        
                                       
                                        <td>
                                            <% if (product.product_orderStatus === "cancelled") { %>
                                                <span class="text-danger"><%= product.product_orderStatus %></span>
                                            <% } else if (product.product_orderStatus === "pending") { %>
                                                <span class="text-warning"><%= product.product_orderStatus %></span>
                                            <% } else { %>
                                                <span class="text-success"><%= product.product_orderStatus %></span>
                                            <% } %>
                                        </td>
                                        <td><%= product.payment_method.method %></td>
                                        <td>₹<%= product.productPrice+50 %></td>
                                        <!-- <td>
                                            <div class="dropdown">
