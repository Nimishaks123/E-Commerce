        document.getElementById('error-message4')
    ];
        
            // Function to add a new size field
            function addSizeField() {
                const newSizeField = document.createElement('div');
                newSizeField.className = 'size-field';
                newSizeField.innerHTML = `
                    <input type="text" name="size" placeholder="Size" class="size-input form-control" required />
                    <input type="number" name="quantity" placeholder="Quantity" class="quantity-input form-control" required min="1" />
                `;
                sizeFieldsContainer.appendChild(newSizeField);
            }
        
            // Function to remove the last size field
            function removeSizeField() {
                const sizeFields = document.querySelectorAll('.size-field');
                if (sizeFields.length > 1) {
                    sizeFieldsContainer.removeChild(sizeFields[sizeFields.length - 1]);
                }
            }
        
           
    

        
            // Function to validate the entire form
            function validateForm(event) {
                let valid = true;
        
                valid &= validateName();
                valid &= validateDescription();
                valid &= validatePrice();
                valid &= validatePromoPrice();
                valid &= validateCountInStock();
                valid &= validateSizeFields();
                valid &= validateCategory();
                valid &= validateImageFields();
        
                if (!valid) {
                    event.preventDefault();
                }
        
                return valid;
            }
        
            // Function to validate product name
            function validateName() {
                const name = document.getElementById("product_name").value;
                const errorElement = document.getElementById('name-error');
                
                if (name.trim() === "") {
                    errorElement.innerHTML = "Please enter the product name";
                    return false;
                } else {
                    errorElement.innerHTML = "";
                    return true;
                }
            }
        
            // Function to validate product description
            function validateDescription() {
                const description = document.getElementById("description").value;
                const errorElement = document.getElementById('description-error');
                
                if (description.trim() === "") {
                    errorElement.innerHTML = "Please enter a description";
                    return false;
                } else {
                    errorElement.innerHTML = "";
                    return true;
                }
            }
        
            // Function to validate product price
            function validatePrice() {
                const price = document.getElementById("price").value;
                const errorElement = document.getElementById('price-error');
        
                if (price === "" || parseFloat(price) <= 0) {
                    errorElement.innerHTML = "Please enter a valid price";
                    return false;
                } else {
                    errorElement.innerHTML = "";
                    return true;
                }
            }
        
            // Function to validate promo price
            function validatePromoPrice() {
                const price = parseFloat(document.getElementById('price').value);
                const promoPrice = document.getElementById('promo_Price').value;
                const promoPriceError = document.getElementById('promo-price-error');
                
                if (promoPrice.trim() === '') {
                    promoPriceError.textContent = 'Promo price is required.';
                    return false;
                } else if (parseFloat(promoPrice) >= price) {
                    promoPriceError.textContent = 'Promo price must be less than the regular price.';
                    return false;
                } else {
                    promoPriceError.textContent = '';
                    return true;
                }
            }
        
            // Function to validate count in stock
            function validateCountInStock() {
                const countInStock = document.getElementById("countInStock").value;
                const errorElement = document.getElementById('countinstock-error');
        
                if (countInStock === "" || parseInt(countInStock) <= 0) {
                    errorElement.innerHTML = "Please enter a valid count in stock";
                    return false;
                } else {
                    errorElement.innerHTML = "";
                    return true;
                }
            }
             // Function to validate the size fields
             function validateSizeFields() {
                const sizeInputs = document.querySelectorAll('.size-input');
                const quantityInputs = document.querySelectorAll('.quantity-input');
                let valid = true;
                errorMessage.innerHTML = ''; // Clear previous error messages
        
                sizeInputs.forEach(input => {
                    if (input.value.trim() === '') {
                        valid = false;
                        input.classList.add('invalid');
                        errorMessage.innerHTML += 'Size field cannot be empty.<br>';
                    } else {
                        input.classList.remove('invalid');
                    }
                });
        
                quantityInputs.forEach(input => {
                    if (input.value.trim() === '' || input.value <= 0) {
                        valid = false;
                        input.classList.add('invalid');
                        errorMessage.innerHTML += 'Quantity must be a positive number.<br>';
                    } else {
                        input.classList.remove('invalid');
                    }
                });
        
                return valid;
            }
            function validateCategory() {
        const category = document.getElementById("category").value;
        const errorElement = document.getElementById('category-error');

        if (category === "") {
            errorElement.innerHTML = "Please select a category";
            return false;
        } else {
            errorElement.innerHTML = "";
            return true;
        }
    }
             // Function to validate the image fields
             function validateImageFields() {
        let valid = true;

        imageInputs.forEach((input, index) => {
            const errorElement = imageErrorMessages[index];
            if (input.files.length === 0) {
                valid = false;
                errorElement.textContent = 'This field is required.';
            } else {
                errorElement.textContent = ''; // Clear error message for this input
            }
        });

        return valid;
    }
        
            // Event listeners
            addSizeFieldButton.addEventListener('click', addSizeField);
            removeSizeFieldButton.addEventListener('click', removeSizeField);
            form.addEventListener('submit', validateForm);
        });
        
</script>
