        document.getElementById('addSizeField').addEventListener('click', function() {
    const sizeFieldsContainer = document.querySelector('.size-fields');
    const newSizeField = document.createElement('div');
    newSizeField.classList.add('size-field');
    newSizeField.innerHTML = `
        <input type="text" name="size" placeholder="Size" />
        <input type="number" name="quantity" placeholder="Quantity" />
    `;
    sizeFieldsContainer.appendChild(newSizeField);
});

document.getElementById('removeSizeField').addEventListener('click', function() {
    const sizeFieldsContainer = document.querySelector('.size-fields');
    const sizeFields = sizeFieldsContainer.querySelectorAll('.size-field');
    if (sizeFields.length > 1) {
        sizeFieldsContainer.removeChild(sizeFields[sizeFields.length - 1]);
    }
});

document.getElementById('productForm').addEventListener('submit', function(event) {
    event.preventDefault();
    const form = event.target;

    // Collect sizes data
    const sizes = [];
    const sizeFields = document.querySelectorAll('.size-field');
    sizeFields.forEach(field => {
        const size = field.querySelector('[name="size"]').value;
        const quantity = field.querySelector('[name="quantity"]').value;
        if (size && quantity) {
            sizes.push({ size, quantity: parseInt(quantity) });
        }
    });

    // Convert sizes to JSON string
    const sizesJson = JSON.stringify(sizes);

    // Add sizes JSON string to a hidden input field
    const sizesInput = document.createElement('input');
    sizesInput.type = 'hidden';
    sizesInput.name = 'sizes';
    sizesInput.value = sizesJson;
    form.appendChild(sizesInput);

    // Submit the form
    form.submit();
});
