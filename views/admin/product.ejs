        document.addEventListener("DOMContentLoaded", function() {
            const addSizeFieldButton = document.getElementById('addSizeField');
            const removeSizeFieldButton = document.getElementById('removeSizeField');
            const sizeFieldsContainer = document.querySelector('.size-fields');
            const form = document.getElementById('productForm');
            const errorMessage = document.getElementById('errorMessage');
