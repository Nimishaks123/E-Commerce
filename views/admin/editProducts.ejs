                </div>
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Basic</h4>
                        </div>
                        <div class="card-body">
                            <form method="post" action="/admin/editProduct?id=<%= product._id %>" id="productForm" enctype="multipart/form-data" >
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Product name</label>
                                    <input type="text" placeholder="Type here" class="form-control" id="product_name" name="name" value="<%= product.name %>" >
                                    <div id="name-error" class="error-message text-danger"></div>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Full description</label>
                                    <textarea placeholder="Type here" class="form-control" rows="4" name="description" id="description" ><%= product.description %></textarea>
                                    <div id="description-error" class="error-message text-danger"></div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label class="form-label">Regular price</label>
                                            <div class="row gx-2">
                                                <input placeholder="₹" type="number" class="form-control" name="price" id="price" value="<%= product.price %>" >
                                                <div id="price-error" class="error-message text-danger"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label class="form-label">Promo price</label>
                                            <div class="row gx-2">
                                                <input placeholder="₹" type="number" class="form-control" name="promo_Price" id="promo_Price" value="<%= product.promo_Price %>" >
                                                <div id="promo-price-error" class="error-message text-danger"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label class="form-label">Count In Stock</label>
                                            <input placeholder="count in stock" type="text" class="form-control" name="countInStock" id="countInStock" value="<%= product.countInStock %>" >
                                            <div id="countinstock-error" class="error-message text-danger"></div>
                                        </div>
                                    </div>
                                    <div class="size-fields">
                                        <% if (product.sizes.length > 0) { %>
                                            <% product.sizes.forEach(size => { %>
                                                <div class="size-field">
                                                    <input type="text" name="size" placeholder="Size" class="size-input form-control" value="<%= size.size %>" required />
                                                    <input type="number" name="quantity" placeholder="Quantity" class="quantity-input form-control" value="<%= size.quantity %>" required min="1" />
                                                </div>
                                            <% }) %>
                                        <% } else { %>
                                            <div class="size-field">
                                                <input type="text" name="size" placeholder="Size" class="size-input form-control" required />
                                                <input type="number" name="quantity" placeholder="Quantity" class="quantity-input form-control" required min="1" />
                                            </div>
                                        <% } %>
                                    </div>
                                    <button type="button" id="addSizeField">Add Size</button>
                                    <button type="button" id="removeSizeField">Remove Size</button>
                                    <div class="col-lg-4"></div>
                                    <div id="errorMessage" class="error-message" style="color: red;"></div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="card mb-4">
                                        <div class="card-header">
                                            <h4>Media</h4>
                                        </div>
                                        <% product.images.forEach((image, index) => { %>
                                            <div class="card-body">
                                                <div class="input-upload">
                                                    <div id="imagePreviewContainer<%= index + 1 %>" class="image-preview mt-3">
                                                        <% if (image) { %>
                                                            <img src="/uploads/<%= image %>" class="img-sm img-thumbnail">
                                                        <% } %>
                                                    </div>
                                                    <input class="form-control" type="file" name="images" data-index="<%= index %>" >
                                                    <input type="hidden" name="imageIndex_images" value="<%= index %>">
                                                </div>
                                                <div id="error-message<%= index + 1 %>" class="text-danger mt-2"></div>
                                            </div>
                                        <% }) %>
                                    <div class="card-body">
                                        <div class="row gx-2">
                                            <div class="col-sm-6 mb-3">
                                                <label class="form-label">Category</label>
                                                <select class="form-select" name="category" id="category">
                                                    <option value="">Select category</option>
                                                    <% if (categories) { %>
                                                        <% categories.forEach(category => { %>
                                                            <option value="<%= category._id %>" <%= product.category.toString() === category._id.toString() ? 'selected' : '' %>><%= category.name %></option>
                                                        <% }) %>
                                                    <% } %>
                                                </select>
                                                <div id="category-error" class="error-message text-danger"></div>
                                            </div>
                                            <button class="btn btn-md rounded font-sm hover-up" type="submit">Update</button>
                                            <% if (typeof successmessage !== 'undefined') { %>
                                                <p class='text-success'>
                                                    <%= successmessage %>
                                                </p>
                                            <% } %>
                                            <% if (typeof failuremessage !== 'undefined') { %>
                                                <p class='text-danger'>
                                                    <%= failuremessage %>
                                                </p>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            
                            <script src="assets/js/vendors/jquery-3.6.0.min.js"></script>
                            <script src="assets/js/vendors/bootstrap.bundle.min.js"></script>
                            <script src="assets/js/vendors/select2.min.js"></script>
                            <script src="assets/js/vendors/perfect-scrollbar.js"></script>
                            <script src="assets/js/vendors/jquery.fullscreen.min.js"></script>
