                            <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
                            <script>
                                document.addEventListener("DOMContentLoaded", function() {
                                    const addSizeFieldButton = document.getElementById('addSizeField');
                                    const removeSizeFieldButton = document.getElementById('removeSizeField');
                                    const sizeFieldsContainer = document.querySelector('.size-fields');
                                    const form = document.getElementById('productForm');
                                    const errorMessage = document.getElementById('errorMessage');
                                    const imageInputs = [
                                        document.getElementById('imageInput1'),
                                        document.getElementById('imageInput2'),
                                        document.getElementById('imageInput3'),
                                        document.getElementById('imageInput4')
                                    ];
                                    const errorMessages = [
                                        document.getElementById('error-message1'),
                                        document.getElementById('error-message2'),
                                        document.getElementById('error-message3'),
                                        document.getElementById('error-message4')
                                    ];
                                    const imagePreviewContainers = [
                                        document.getElementById('imagePreviewContainer1'),
                                        document.getElementById('imagePreviewContainer2'),
                                        document.getElementById('imagePreviewContainer3'),
                                        document.getElementById('imagePreviewContainer4')
                                    ];
                        
                                    addSizeFieldButton.addEventListener('click', function() {
                                        const sizeField = document.createElement('div');
                                        sizeField.className = 'size-field';
                                        sizeField.innerHTML = `
                                            <input type="text" name="size" placeholder="Size" class="size-input form-control" required />
                                            <input type="number" name="quantity" placeholder="Quantity" class="quantity-input form-control" required min="1" />
                                        `;
                                        sizeFieldsContainer.appendChild(sizeField);
                                    });
                        
                                    removeSizeFieldButton.addEventListener('click', function() {
                                        const sizeFields = sizeFieldsContainer.querySelectorAll('.size-field');
                                        if (sizeFields.length > 1) {
                                            sizeFields[sizeFields.length - 1].remove();
                                        }
                                    });
                        
                                    form.addEventListener('submit', function(event) {
                                        const sizeInputs = form.querySelectorAll('.size-input');
                                        const quantityInputs = form.querySelectorAll('.quantity-input');
                                        let valid = true;
                                        sizeInputs.forEach((input, index) => {
                                            if (!input.value || !quantityInputs[index].value) {
                                                valid = false;
                                            }
                                        });
                                        if (!valid) {
                                            event.preventDefault();
                                            errorMessage.textContent = 'Please fill in all size and quantity fields.';
                                        }
                                    });
                        
                                    imageInputs.forEach((input, index) => {
                                        input.addEventListener('change', function(event) {
                                            const file = event.target.files[0];
                                            if (file) {
                                                const reader = new FileReader();
                                                reader.onload = function(e) {
                                                    const imgElement = document.createElement('img');
                                                    imgElement.src = e.target.result;
                                                    imgElement.className = 'img-sm img-thumbnail';
                                                    imagePreviewContainers[index].innerHTML = '';
                                                    imagePreviewContainers[index].appendChild(imgElement);
                                                };
                                                reader.readAsDataURL(file);
                                            } else {
                                                imagePreviewContainers[index].innerHTML = '';
                                            }
                                        });
                                    });
                                });
                            </script>
                        </div>
    
    
